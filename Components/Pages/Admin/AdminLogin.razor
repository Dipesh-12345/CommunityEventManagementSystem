@page "/admin/login"
@inject NavigationManager Nav
@using Microsoft.AspNetCore.WebUtilities

<div class="login-border">
    <div class="login-scene d-flex justify-content-center align-items-center min-vh-100">
        <div class="login-card">
            <div class="avatar-container mb-4">
                <img src="avatar.png" alt="Avatar" class="avatar" />
            </div>

            <h3 class="text-center fw-bold mb-4">Login Here</h3>

            @if (showError)
            {
                <div class="alert alert-danger py-2 text-center mb-4">
                    Invalid username or password
                </div>
            }

            <form method="post" action="/admin/login-post">
                <div class="input-group mb-3">
                    <input name="username" class="form-control login-input" placeholder="Username" required />
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                </div>

                <div class="input-group mb-4">
                    <input name="password" type="password" class="form-control login-input" placeholder="Password" required />
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="remember">
                        <label class="form-check-label text-light small" for="remember">
                            Remember me
                        </label>
                    </div>
                    <a href="#" class="forgot-link">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-4 login-btn">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </button>
            </form>
        </div>
    </div>
</div>

@code {
    private bool showError;

    protected override void OnInitialized()
    {
        var uri = new Uri(Nav.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);
        showError = query.ContainsKey("error");
    }
}
